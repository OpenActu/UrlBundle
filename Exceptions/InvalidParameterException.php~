<?php
namespace OpenActu\UrlBundle\Exceptions;

use InvalidArgumentException;

class InvalidParameterException extends \Exception implements OpenActuUrlBundleExceptionInterface
{
	const BAD_URL_FORMAT_MESSAGE = 'you attempt to load an url with bad format (please consult the RFC3986 recommandations)';
	const DEFAULT_MESSAGE		= 'unknown error found';
	const BAD_URL_FORMAT_CODE	= 500;
	const DEFAULT_CODE		= 501;
	public function __construct($message = self::DEFAULT_MESSAGE,$code = self::DEFAULT_CODE)
	{
		parent::__construct($message,$code);
	}
}
