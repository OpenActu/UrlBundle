use Psr\Http\Message\UriInterface;
class Uri implements UriInterface
{
	const   PATH_ABSOLUTE = '/';

	private $scheme		= null;
	private $authority	= null;
	private $path		= null;
	private $query		= null;
	private $fragment	= null;
	
	public function isValid()
	{
		if(null === $this->scheme)
		{
			// scheme required
		}
		if(null === $this->path)
		{	
			// path required
		}
	}
}
