article_add:
    path:     /article/add
    defaults: { _controller: ApplicationCoreBundle:Article:add }

article_edit:
    path:     /article/edit/{id}
    defaults: { _controller: ApplicationCoreBundle:Article:edit }
    requirements:
        id: \d+
article_list:
    path:     /article/list/{id}
    defaults: { _controller: ApplicationCoreBundle:Article:list }

article_delete:
    path:     /article/delete/{id}
    defaults: { _controller: ApplicationCoreBundle:Article:delete }
    requirements:
        id: \d+
